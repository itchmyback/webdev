<!-- data is an array from business key: array value -->
<% data.forEach(element => {  %>
    <p> <%= element.name %></p><p><%= element.price %> - Rating <%= element.rating %> </p>

    <!-- what are we doing here again? -->
    <!-- transform rating into stars -->
    <!-- for the remainder use mod 1 -->
    <!-- look in FoodFinder public/regular folder -->
    <% let stars = `/regular/regular_${element.rating}.png` %>
    <% if(element.rating % 1 == 0) { %>
        <% stars = `/regular/regular_${element.rating}.png` %>
    <% } else { %>
        <% stars = `/regular/regular_${Math.floor(element.rating)}_half.png` %>
    <% } %>

    <p>Stars:
        <img src=<%= stars %> alt="stars"/>
<%#    <p>Stars:  stars  </p> %>
        <img src="" alt="" srcset=""/>
    </p>
<% }) %>